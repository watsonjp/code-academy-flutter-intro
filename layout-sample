import 'package:flutter/material.dart';

void main() {
  const headerStyle = TextStyle(color: Colors.blueAccent, fontSize: 32);
  var headerOne = const Align(
      alignment: Alignment.bottomCenter,
      child: Text('Column One', style: headerStyle));
  var headerTwo = const Align(
      alignment: Alignment.bottomCenter,
      child: Text('Column Two', style: headerStyle));
    
  var rowOne =
      Row(mainAxisAlignment: MainAxisAlignment.spaceEvenly, children: const [
        Icon(Icons.wb_sunny_outlined, color: Colors.yellow, size: 50),
        Icon(Icons.waving_hand_outlined, color: Colors.green, size: 50),
        Icon(Icons.favorite, color: Colors.red, size: 50)
      ]);
  var rowTwo =
      Row(mainAxisAlignment: MainAxisAlignment.spaceEvenly, children: const [
        Icon(Icons.wb_sunny_outlined, color: Colors.yellow, size: 50),
        Icon(Icons.waving_hand_outlined, color: Colors.green, size: 50),
        Icon(Icons.favorite, color: Colors.red, size: 50)
      ]);

  var columnOne = Column(
      mainAxisAlignment: MainAxisAlignment.spaceEvenly,
      children: [headerOne, rowOne, rowTwo]);
  var columnTwo = Column(
      mainAxisAlignment: MainAxisAlignment.spaceEvenly,
      children: [headerTwo, rowOne, rowTwo]);
  
  var rowContainer =
      Row(mainAxisAlignment: MainAxisAlignment.spaceEvenly, children: [
        columnOne, columnTwo]);
  
  
  runApp(MaterialApp(home: Scaffold(body: rowContainer)));
}
